
    <h1>
        Codeial / <%= title %>
    </h1>

    <section id="feed-posts">
        <h4 >Posts</h4>
        <form action="/posts/create" method="post" id="new-post-form">
            <textarea name="content" id="" cols="30" rows="3" placeholder="Type here.."></textarea>
            <input type="submit" value="Post">
        </form>


        <div id="post-list-container">
            <ul>
                <% for(post of posts) { %>
                
                    <li>
                        <h4> <%= post.content %></h4>
                        <small>
                            <%= post.user.name %>
                        </small>
                    </li>
                
                <%}%>
            </ul>
        </div>

    </section>

